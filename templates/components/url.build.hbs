<div v-if="description" class="help-block description">\{{ description }}</div>

<template v-if="readonly">
  <p class="form-control-static">\{{ value }}</p>
  <input
    type="hidden"
    class="form-control"
    v-model.trim.lazy="value"
    v-on:change="updateValue()"
    v-on:input="onInput($event)"
    :name="name"
    :id="name"
    :placeholder="placeholder"
  />
</template>

<input v-else
  type="text"
  class="form-control focus-outline"
  v-model.trim.lazy="value"
  v-on:change="updateValue()"
  v-on:input="onInput($event)"
  :name="name"
  :id="name"
  :placeholder="placeholder"
  tabindex="0"
/>
<p class="text-danger" v-if="$v.value.url === false && $v.value.$dirty">The input is not a valid URL.</p>
<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty">Field is required.</p>
