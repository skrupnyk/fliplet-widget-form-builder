<div v-if="description" class="help-block description">\{{ description }}</div>

<template v-if="readonly">
  <p class="form-control-static">\{{ value }}</p>
  <input
  type="hidden"
  class="form-control"
  v-model.trim.lazy="value"
  v-on:change="updateValue()"
  v-on:input="onInput($event)"
  :name="name"
  :id="name"
  :placeholder="placeholder"
  />
</template>

<input v-else
  type="text"
  class="form-control focus-outline"
  v-model.trim.lazy="value"
  v-on:change="updateValue()"
  v-on:input="onInput($event)"
  :name="name"
  :id="name"
  :placeholder="placeholder"
  tabindex="0"
/>
<p class="text-danger" v-if="$v.value.maxLength === false && $v.value.$dirty">This field only accept up to 15 digits.</p>
<p class="text-danger" v-if="$v.value.required === false && $v.value.$dirty">Field is required.</p>
<p class="text-danger" v-if="$v.value.positive === false && $v.value.$dirty">Only positive digits are allowed.</p>
<p class="text-danger" v-if="$v.value.integer === false && $v.value.$dirty">Only integer digits are allowed.</p>
<p class="text-danger" v-if="$v.value.decimal === false && $v.value.$dirty">Only digits or \{{decimals}} digits after point are allowed.</p>
